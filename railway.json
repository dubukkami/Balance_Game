{
  "$schema": "https://railway.app/railway.schema.json",
  
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  
  "deploy": {
    "startCommand": "java -Xmx400m -Xms200m -XX:MaxMetaspaceSize=96m -XX:+UseG1GC -XX:MaxGCPauseMillis=200 -XX:+UseStringDeduplication -XX:+UnlockExperimentalVMOptions -XX:+UseCGroupMemoryLimitForHeap -XX:NewRatio=1 -XX:+UseContainerSupport -Dspring.profiles.active=prod -Dserver.port=$PORT -jar /app/app.jar",
    "healthcheckPath": "/actuator/health",
    "healthcheckTimeout": 30,
    "healthcheckInterval": 600,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}